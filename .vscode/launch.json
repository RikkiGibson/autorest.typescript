  "version": "0.2.0",
  "configurations": [
    {
      "type": "coreclr",
      "request": "attach",
      "name": ".NET Core Attach",
      "processId": "${command:pickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "args": ["-g", "flattened XML"],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
